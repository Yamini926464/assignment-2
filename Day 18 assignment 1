//check whether given number is palindrome or not
#include<stdio.h>
int main()
{
   int n,sum=0,temp,rem;
printf("enter any number:\n");
    scanf("%d",&n);
    temp==n;
   
    while(n>0)
    {  
    rem=n%10;
    sum=sum*10+rem;
    n=n/10;
    }
        if(n==sum)
        
            printf("the number is palindrome");
        else   
printf("the number is not a palindrome");
        
        }
